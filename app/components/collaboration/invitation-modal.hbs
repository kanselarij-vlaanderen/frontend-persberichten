<Auk::Modal>
  <Auk::Modal::Header
    @title="Persbericht co-editeren"
    @onClose={{@onCancel}}
  />
  <Auk::Modal::Body>
    <InputField::OrganizationSelect
      @label="Kabinet(ten)"
      @selected={{this.externalCollaborators}}
      @filterUserOrganization={{true}}
      @multiple={{true}}
      @onChange={{this.selectExternalCollaborators}}
    />
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onCancel}}>
    <Auk::Button
      @skin="primary"
      @disabled={{this.isDisabled}}
      @loading={{@loading}}
      {{on "click" (fn @onConfirm this.collaborators)}}
    >
      Uitnodigen tot co-editeren
    </Auk::Button>
  </Auk::Modal::Footer>
</Auk::Modal>
