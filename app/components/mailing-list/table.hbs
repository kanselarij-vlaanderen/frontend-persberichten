<div class="auk-scroll-wrapper">
  <div class="auk-scroll-wrapper__body">
    <div class="auk-u-my-4">
      {{#if @model.length}}
        <table class="auk-table">
          <thead>
            <tr>
              <Utils::ThSortable
                @label="Titel verzendlijst"
                @field="name"
                @currentSorting={{@sort}}
                @onChange={{@onSortChange}}
              />
              <Utils::ThSortable
                @label="Laatst bewerkt"
                @field="modified"
                @currentSorting={{@sort}}
                @onChange={{@onSortChange}}
              />
              <th>
                {{!-- open detail --}}
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each @model as |row|}}
              <tr>
                <td>
                  {{row.name}}
                </td>
                <td>
                  {{dayjs-format row.modified outputFormat="DD-MM-YYYY"}}<br/>
                  <span class="auk-u-text-small auk-u-text-muted">
                    {{dayjs-format row.modified outputFormat="HH:mm"}}
                  </span>
                </td>
                <td>
                  <Auk::ButtonLink
                    @skin="borderless"
                    @icon="chevron-right"
                    @model={{row.id}}
                    @route="contacts.mailing-list"
                  />
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>

        <Auk::Toolbar as |Toolbar|>
          <Toolbar.Group @position="left" as |Group|>
            <Group.Item>
              <Auk::Pagination
                @page={{@page}}
                @size={{@size}}
                @nbOfItems={{@model.length}}
                @total={{@model.meta.count}}
                @onNextPage={{@onNextPage}}
                @onPreviousPage={{@onPreviousPage}}
              />
            </Group.Item>
          </Toolbar.Group>
          <Toolbar.Group @position="right" as |Group|>
            <Group.Item>
              Verzendlijsten per pagina
            </Group.Item>
            <Group.Item>
              <WebComponents::AuPageSize
                @selectedSize={{@size}}
                @onChange={{@onPageSizeChange}}
              />
            </Group.Item>
          </Toolbar.Group>
        </Auk::Toolbar>
      {{else}}
        <Auk::Panel>
          <Auk::Panel::Body>
            <Auk::EmptyState @message={{@noDataMessage}} />
          </Auk::Panel::Body>
        </Auk::Panel>
      {{/if}}
    </div>
  </div>
</div>
