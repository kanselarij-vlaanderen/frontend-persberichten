<Auk::Navbar @skin="white" @noPadding="true">
  <WebComponents::AuToolbar>
    <WebComponents::AuToolbar::Group @position="left">
      <WebComponents::AuToolbar::Item>
        <Auk::Brand @logotype="Vlivia" />
      </WebComponents::AuToolbar::Item>
      <WebComponents::AuToolbar::Item>
        <WebComponents::AuTabs>
          <WebComponents::AuTab @route="press-releases.overview">
            Persberichten
          </WebComponents::AuTab>
          <WebComponents::AuTab @route="contacts">
            Contacten
          </WebComponents::AuTab>
          <WebComponents::AuTab @route="sources.overview">
            Bronnen
          </WebComponents::AuTab>
        </WebComponents::AuTabs>
      </WebComponents::AuToolbar::Item>
    </WebComponents::AuToolbar::Group>
    <WebComponents::AuToolbar::Group @position="right">
      <WebComponents::AuToolbar::Item>
        <Auk::ButtonLink
          @skin="muted"
          @padded="padded"
          @icon="circle-question"
        >
          Help
        </Auk::ButtonLink>
      </WebComponents::AuToolbar::Item>
      {{#if this.session.isAuthenticated}}
        <WebComponents::AuToolbar::Item class="auk-u-mr-3" >
          <Auk::ButtonLink
            @skin="muted"
            @icon="chevron-down"
            @layout="icon-right"
          >
            {{this.currentSession.user.fullName}}
          </Auk::ButtonLink>
        </WebComponents::AuToolbar::Item>
        <WebComponents::AuToolbar::Item class="auk-u-mr-3" >
          <Auk::ButtonLink
            @skin="muted"
            @layout="icon-right"
            {{on "click" this.logout}}
          >
            {{!-- TODO refactor to dropdown menu --}}
            Log uit
          </Auk::ButtonLink>
        </WebComponents::AuToolbar::Item>
      {{/if}}
    </WebComponents::AuToolbar::Group>
  </WebComponents::AuToolbar>
</Auk::Navbar>
