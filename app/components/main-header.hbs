<Auk::Navbar @skin="white" @noPadding="true">
  <Auk::Toolbar>
    <Auk::Toolbar::Group  @position="left">
      <Auk::Toolbar::Item>
        <Auk::Brand @logotype="Vlivia" />
      </Auk::Toolbar::Item>
      <Auk::Toolbar::Item>
        <Auk::Tabs>
          <Auk::Tab  @route="press-releases.overview">
            Persberichten
          </Auk::Tab>
          <Auk::Tab  @route="contacts">
            Contacten
          </Auk::Tab>
          <Auk::Tab  @route="sources.overview">
            Bronnen
          </Auk::Tab>
        </Auk::Tabs>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group >
    <Auk::Toolbar::Group  @position="right">
      <Auk::Toolbar::Item>
        <Auk::ButtonLink
          @skin="muted"
          @padded="padded"
          @icon="circle-question"
        >
          Help
        </Auk::ButtonLink>
      </Auk::Toolbar::Item>
      {{#if this.session.isAuthenticated}}
        <Auk::Toolbar::Item class="auk-u-mr-3" >
          <Auk::ButtonLink
            @skin="muted"
            @icon="chevron-down"
            @layout="icon-right"
          >
            {{this.currentSession.user.fullName}}
          </Auk::ButtonLink>
        </Auk::Toolbar::Item>
        <Auk::Toolbar::Item class="auk-u-mr-3" >
          <Auk::ButtonLink
            @skin="muted"
            @layout="icon-right"
            {{on "click" this.logout}}
          >
            {{!-- TODO refactor to dropdown menu --}}
            Log uit
          </Auk::ButtonLink>
        </Auk::Toolbar::Item>
      {{/if}}
    </Auk::Toolbar::Group >
  </Auk::Toolbar>
</Auk::Navbar>
