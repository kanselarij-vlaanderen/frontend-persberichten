<PowerSelectMultiple
  @options={{this.organizations}}
  @selected={{this.selected}}
  @noMatchesMessage="Geen resultaten gevonden"
  @placeholder="Kabinetten zoeken"
  @onChange={{this.select}}
  @allowClear={{true}}
  @searchEnabled={{true}}
  @onInput={{perform this.debouncedSearch}}
  @searchField="shortName"
  as |governmentField|>
    {{ governmentField.shortName }}
</PowerSelectMultiple>
