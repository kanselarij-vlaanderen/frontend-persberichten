<Auk::Modal>
  <Auk::Modal::Header
    @title="Bestemmelingen toevoegen"
    @onClose={{@onCancel}}
  />
  <Auk::Modal::Body>
    <div class="modal-with-dropdown auk-form-group-layout auk-form-group-layout--standard">
      <div class="auk-form-group">
        <Auk::Label for="publication-date">
          Bestemmelingen
        </Auk::Label>
        <PowerSelectMultiple
          @options={{this.contactItems}}
          @selected={{this.selectedContactItems}}
          @noMatchesMessage="Geen resultaten gevonden"
          @onChange={{this.selectContactItems}}
          @allowClear={{true}}
          @searchEnabled={{true}}
          @onInput={{perform this.debouncedSearch}}
          @searchField="fullName"
          @renderInPlace={{true}}
          as |contactItem|>
          {{contactItem.fullName}}
        </PowerSelectMultiple>
      </div>
    </div>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onCancel}}>
    <Auk::Button
      @skin="primary"
      @disabled={{not this.selectedContactItems}}
      {{on "click" (fn @onAddContactItems this.selectedContactItems)}}
    >
      Toevoegen
    </Auk::Button>
  </Auk::Modal::Footer>
</Auk::Modal>