<div class="auk-u-mt-8 auk-container auk-container--center">
  <div class="auk-u-mt-8">
        <div class="auk-o-flex auk-o-flex--vertical">
      <div class="auk-o-grid auk-u-mb-4">
        <Auk::Label for="title" class="auk-o-grid-col-3">
          Titel
        </Auk::Label>
        <h2 class="auk-h2 auk-o-grid-col-9">{{@pressRelease.title}}</h2>
      </div>
      <div class="auk-o-grid auk-u-mb-4">
        <Auk::Label for="abstract" class="auk-o-grid-col-3">
          Samenvatting
        </Auk::Label>
        <p class="auk-o-grid-col-9">{{@pressRelease.abstract}}</p>
      </div>
      <div class="auk-o-grid auk-u-mb-4">
        <Auk::Label for="message" class="auk-o-grid-col-3">
          Inhoud
        </Auk::Label>
        {{!-- template-lint-disable no-triple-curlies --}}
        <p class="auk-o-grid-col-9">{{{@pressRelease.htmlContent}}}</p>
        {{!-- template-lint-enable no-triple-curlies --}}
      </div>
      {{#unless @isSharedView}}
        <div class="auk-o-grid auk-u-mb-4">
          <Auk::Label class="auk-o-grid-col-3">
            Bron
          </Auk::Label>
          <div class="auk-o-grid-col-9">
            <PressRelease::SourcesTable
              @condensedView={{true}}
              @model={{@pressRelease.sources}}
              @noDataMessage="Geen bronnen toegevoegd."
            />
          </div>
        </div>
      {{/unless}}
      <div class="auk-o-grid auk-u-mb-4">
        <Auk::Label class="auk-o-grid-col-3">
          Beleidsbevoegdheden
        </Auk::Label>
        {{#if @pressRelease.governmentFields}}
          <ul class="auk-o-grid-col-9">
            {{#each @pressRelease.governmentFields as |governmentField|}}
              <li>
                {{governmentField.prefLabel}}
              </li>
            {{/each}}
          </ul>
        {{else}}
          <Auk::Panel class="auk-o-grid-col-9">
            <Auk::Panel::Body>
              <Auk::EmptyState @message="Geen beleidsbevoegdheden toegevoegd" />
            </Auk::Panel::Body>
          </Auk::Panel>
        {{/if}}
      </div>
      <div class="auk-o-grid auk-u-mb-4">
        <Auk::Label class="auk-o-grid-col-3">
          Kernwoorden
        </Auk::Label>
        {{#if @pressRelease.keywords}}
          <div class="auk-o-grid-col-9">
            {{#each @pressRelease.keywords as |keyword|}}
              <Auk::Pill>{{keyword}}</Auk::Pill>
            {{/each}}
          </div>
        {{else}}
          <Auk::Panel class="auk-o-grid-col-9">
            <Auk::Panel::Body>
              <Auk::EmptyState @message="Geen kernwoorden toegevoegd" />
            </Auk::Panel::Body>
          </Auk::Panel>
        {{/if}}
      </div>
      <div class="auk-o-grid auk-u-mb-4">
        <Auk::Label class="auk-o-grid-col-3">
          Thema's
        </Auk::Label>
        {{#if @pressRelease.themes}}
          <ul class="auk-o-grid-col-9">
            {{#each @pressRelease.themes as |theme|}}
              <li>
                {{theme.label}}
              </li>
            {{/each}}
          </ul>
        {{else}}
          <Auk::Panel class="auk-o-grid-col-9">
            <Auk::Panel::Body>
              <Auk::EmptyState @message="Geen thema's toegevoegd" />
            </Auk::Panel::Body>
          </Auk::Panel>
        {{/if}}
      </div>
      {{#unless @isSharedView}}
        <div class="auk-o-grid auk-u-mb-4">
          <Auk::Label class="auk-o-grid-col-3">
            Publicatiekanalen
          </Auk::Label>
          {{#if @pressRelease.publicationChannels}}
            <ul class="auk-o-grid-col-9">
              {{#each @pressRelease.publicationChannels as |publicationChannel|}}
                <li>
                  {{publicationChannel.name}}
                </li>
              {{/each}}
            </ul>
          {{else}}
            <Auk::Panel class="auk-o-grid-col-9">
              <Auk::Panel::Body>
                <Auk::EmptyState @message="Geen publicatiekanalen geselecteerd" />
              </Auk::Panel::Body>
            </Auk::Panel>
          {{/if}}
        </div>
      {{/unless}}
      <div class="auk-o-grid auk-u-mb-4">
        <Auk::Label class="auk-o-grid-col-3">
          Bijlagen
        </Auk::Label>
        <PressRelease::FileList @files={{@pressRelease.attachments}} class="auk-o-grid-col-9" />
      </div>
    </div>
  </div>
</div>
