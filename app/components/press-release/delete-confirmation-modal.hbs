<Auk::Modal>
  <Auk::Modal::Header
    @title="Wilt u dit persbericht verwijderen?"
    @closeable={{false}}
  />
  <Auk::Modal::Body>
    <p>
      Bent u zeker dat u dit persbericht wil verwijderen?
    </p>
    <p>
      Deze actie kan niet ongedaan worden gemaakt.
    </p>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onCancel}}>
    <Auk::Button
      @skin="danger-primary"
      @loading={{@loading}}
      {{on "click" @onConfirm}}
    >
      Verwijderen
    </Auk::Button>
  </Auk::Modal::Footer>
</Auk::Modal>
