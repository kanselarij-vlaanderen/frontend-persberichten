<div class="auk-u-mt-8 auk-container--small auk-container--center">
  <div class="auk-u-mt-8">
    <h2 class="auk-h2">Bericht</h2>
    <div class="auk-form-group-layout auk-form-group-layout--standard">
      <div class="auk-form-group">
        <Auk::Label for="title">
          Titel
        </Auk::Label>
        <Auk::Input
          type="text"
          id="title"
          @block={{true}}
          value={{@pressRelease.title}}
          {{on "input" (fn this.setInputValue @pressRelease "title")}}
        />
      </div>
      <div class="auk-form-group">
        <Auk::Label for="message">
          Bericht
        </Auk::Label>
        <Auk::Textarea
          type="text"
          id="message"
          @block={{true}}
          @rows={{10}}
          value={{@pressRelease.htmlContent}}
          {{on "input" (fn this.setInputValue @pressRelease "htmlContent")}}
        />
      </div>
      <div class="auk-form-group">
        <Auk::Label for="abstract">
          Samenvatting
        </Auk::Label>
        <Auk::Textarea
          type="text"
          id="abstract"
          @block={{true}}
          @rows={{5}}
          value={{@pressRelease.abstract}}
          {{on "input" (fn this.setInputValue @pressRelease "abstract")}}
        />
      </div>
      <div class="auk-form-group">
        <Auk::Label>
          Kernwoorden
        </Auk::Label>
        <Auk::InputPills
          @items={{@pressRelease.keyword}}
          @onCreate={{(fn this.addKeyword @pressRelease)}}
          @onRemove={{(fn this.deleteKeyword @pressRelease)}} as |keyword|>
          {{keyword}}
        </Auk::InputPills>
      </div>
      <div class="auk-form-group">
        <Auk::Label>
          Ontvangers
        </Auk::Label>
        <h3>Publicatiekanalen</h3>
        <InputField::PressReleasePublicationChannels @pressRelease={{@pressRelease}} />
      </div>
    </div>
  </div>
</div>
