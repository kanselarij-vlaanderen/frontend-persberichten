<Auk::Modal>
  <Auk::Modal::Header
    @title="Contactpersoon toevoegen"
    @onClose={{@onCancel}}
  />
  <Auk::Modal::Body>
    <div class="auk-form-group-layout auk-form-group-layout--standard">
      <div class="auk-form-group">
        <Auk::Label for="publication-date">
          Contactpersonen
        </Auk::Label>
        <PowerSelect
          @options={{this.sources}}
          @selected={{this.selectedSource}}
          @searchEnabled={{true}}
          @searchField="fullName"
          @onChange={{this.onSelectContact}} as |source|>
          {{source.fullName}}
        </PowerSelect>
      </div>
    </div>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onCancel}}>
    <Auk::Button
      @skin="primary"
      @loading={{@loading}}
      @disabled={{(not this.selectedSource)}}
      {{on "click" this.onAddContact}}
    >
      Toevoegen
    </Auk::Button>
  </Auk::Modal::Footer>
</Auk::Modal>