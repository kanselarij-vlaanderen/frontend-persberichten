<Auk::Modal>
  <Auk::Modal::Header
    @title="Perscontacten toevoegen"
    @onClose={{@onCancel}}
  />
  <Auk::Modal::Body>
    <div class="modal-with-dropdown auk-form-group-layout auk-form-group-layout--standard">
      <div class="auk-form-group">
        <Auk::Label for="publication-date">
          Perscontacten
        </Auk::Label>
        <PowerSelectMultiple
          @options={{this.sources}}
          @selected={{this.selectedSources}}
          @noMatchesMessage="Geen resultaten gevonden"
          @onChange={{this.selectSources}}
          @allowClear={{true}}
          @searchEnabled={{true}}
          @onInput={{perform this.debouncedSearch}}
          @searchField="fullName"
          @renderInPlace={{true}}
          as |source|>
          {{source.fullName}} {{#if source.role}}({{source.role}}){{/if}}
        </PowerSelectMultiple>
      </div>
    </div>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onCancel}}>
    <Auk::Button
      @skin="primary"
      @disabled={{not this.selectedSources}}
      {{on "click" (fn @onAddSources this.selectedSources)}}
    >
      Toevoegen
    </Auk::Button>
  </Auk::Modal::Footer>
</Auk::Modal>