<Auk::Modal @size="small">
  <Auk::Modal::Header
    @title={{if @isNewContact "Contactpersoon toevoegen" "Contactpersoon bewerken"}}
    @onClose={{@onCancel}}
  />
  <Auk::Modal::Body>
    <div class="auk-form-group-layout auk-form-group-layout--standard">
      <div class="auk-form-group">
        <Auk::Label for="givenName">
          Voornaam
        </Auk::Label>
        <Auk::Input
          type="text"
          id="givenName"
          @block={{true}}
          value={{@contact.givenName}}
          {{on "input" (fn this.setInputValue "givenName")}}
          {{on "change" this.setFullName}}
        />
      </div>
      <div class="auk-form-group">
        <Auk::Label for="familyName">
          Achternaam
        </Auk::Label>
        <Auk::Input
          type="text"
          id="familyName"
          @block={{true}}
          value={{@contact.familyName}}
          {{on "input" (fn this.setInputValue "familyName")}}
          {{on "change" this.setFullName}}
        />
      </div>
      <div class="auk-form-group">
        <Auk::Label for="mailAddress">
          E-mailadres
        </Auk::Label>
        <Auk::Input
          type="text"
          id="mailAddress"
          @block={{true}}
          value={{@contact.mailAddress.value}}
          {{on "input" (fn this.setRelationInputValue "mailAddress")}}
        />
      </div>
      <div class="auk-form-group">
        <Auk::Label for="telephone">
          Telefoon
        </Auk::Label>
        <Auk::Input
          type="text"
          id="telephone"
          @block={{true}}
          value={{@contact.telephone.value}}
          {{on "input" (fn this.setRelationInputValue "telephone")}}
        />
      </div>
      <div class="auk-form-group">
        <Auk::Label for="organizationName">
          Organisatie
        </Auk::Label>
        <Auk::Input
          type="text"
          id="organizationName"
          @block={{true}}
          value={{@contact.organizationName}}
          {{on "input" (fn this.setInputValue "organizationName")}}
        />
      </div>
    </div>
  </Auk::Modal::Body>
  <Auk::Modal::Footer @onCancel={{@onCancel}}>
    <div class="auk-o-flex auk-o-flex--horizontal-align">
      {{#unless @isNewContact}}
        <Auk::Button
          class="auk-u-mr"
          @skin="danger-primary"
          {{on "click" (fn @onDeleteContact)}}
        >
          Verwijderen
        </Auk::Button>
      {{/unless}}
      {{#if @isNewContact}}
        <Auk::Button
          @skin="primary"
          @disabled={{this.isAddDisabled}}
          {{on "click" (fn @onAddContact)}}
        >
          Contactpersoon toevoegen
        </Auk::Button>
      {{else}}
        <Auk::Button
          @skin="primary"
          {{on "click" (fn @onChangeContact)}}
        >
          Wijzigen
        </Auk::Button>
      {{/if}}
    </div>
  </Auk::Modal::Footer>
</Auk::Modal>
