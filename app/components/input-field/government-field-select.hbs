<PowerSelectMultiple
  @options={{this.governmentFields}}
  @selected={{@selectedGovernmentFields}}
  @noMatchesMessage="Geen resultaten gevonden"
  @placeholder="Beleidsbevoegdheden zoeken"
  @onChange={{@onChange}}
  @allowClear={{true}}
  @searchEnabled={{true}}
  @onInput={{perform this.debouncedSearch}}
  @searchField="prefLabel"
  @disabled={{@disabled}}
  as |governmentField|>
    {{ governmentField.prefLabel }}
</PowerSelectMultiple>