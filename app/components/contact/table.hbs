<div class="auk-scroll-wrapper">
  <div class="auk-scroll-wrapper__body">
    <div class="auk-u-my-4">
      {{#if @model.length}}
        <table class="auk-table">
          <thead>
            <tr>
              <Utils::ThSortable
                @label="Naam perscontact"
                @field="full-name"
                @currentSorting={{@sort}}
                @onChange={{@onSortChange}}
              />
              <Utils::ThSortable
                @label="Functie"
                @field="role"
                @currentSorting={{@sort}}
                @onChange={{@onSortChange}}
              />
              <Utils::ThSortable
                @label="Organisatie"
                @field="organization.shortName"
                @currentSorting={{@sort}}
                @onChange={{@onSortChange}}
              />
              <th>
                E-mailadres
              </th>
              <Utils::ThSortable
                @label="Laatst bewerkt"
                @field="modified"
                @currentSorting={{@sort}}
                @onChange={{@onSortChange}}
              />
              <th>
                {{!-- open detail --}}
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each @model as |row|}}
              <tr>
                <td>
                  {{row.fullName}}
                </td>
                <td>
                  {{row.role}}
                </td>
                <td>
                  {{or row.organization.shortName row.organization.name}}
                </td>
                <td>
                  {{row.mailAddress.value}}
                </td>
                <td>
                  {{dayjs-format row.modified outputFormat="DD-MM-YYYY"}}<br/>
                  <span class="auk-u-text-small auk-u-muted">
                    {{dayjs-format row.modified outputFormat="HH:mm"}}
                  </span>
                </td>
                <td>
                  <LinkTo
                    @route="sources.source"
                    @model={{row.id}}
                    class="auk-button auk-button--borderless auk-button--icon">
                    <span class="auk-button__content">
                      <i class="ki ki-chevron-right"></i>
                    </span>
                  </LinkTo>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>

        <Auk::Toolbar>
          <Auk::Toolbar::Group  @position="left">
            <Auk::Toolbar::Item>
              <Auk::Pagination
                @page={{@page}}
                @size={{@size}}
                @nbOfItems={{@model.length}}
                @total={{@model.meta.count}}
                @onNextPage={{@onNextPage}}
                @onPreviousPage={{@onPreviousPage}}
              />
            </Auk::Toolbar::Item>
          </Auk::Toolbar::Group >
          <Auk::Toolbar::Group  @position="right">
            <Auk::Toolbar::Item>
              Perscontacten per pagina
            </Auk::Toolbar::Item>
            <Auk::Toolbar::Item>
              <WebComponents::AuPageSize
                @selectedSize={{@size}}
                @onChange={{@onPageSizeChange}}
              />
            </Auk::Toolbar::Item>
          </Auk::Toolbar::Group >
        </Auk::Toolbar>
      {{else}}
        <Auk::Panel>
          <Auk::Panel::Body>
            <Auk::EmptyState @message={{@noDataMessage}} />
          </Auk::Panel::Body>
        </Auk::Panel>
      {{/if}}
    </div>
  </div>
</div>