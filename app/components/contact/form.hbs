{{#unless this.loadData.isRunning}}
  <div class="auk-u-mt-8 auk-container--small auk-container--center">
    <div class="auk-u-mt-8">
      {{#unless @source.isNew}}
        <h2 class="auk-h2">Status</h2>
        <div class="auk-form-group-layout auk-form-group-layout--standard">
          <InputField::ContactStatusRadio
            @label="Deze contactpersoon is momenteel"
            @value={{this.selectedStatus}}
            @onChange={{this.setContactStatus}}
            class="auk-form-group"
          />
        </div>
      {{/unless}}
    </div>

    <div class="auk-u-mt-8">
      <h2 class="auk-h2">Persoonlijke informatie</h2>
      <div class="auk-o-grid auk-form-group-layout auk-form-group-layout--grid">
        <div class="auk-o-grid-col-6 auk-form-group">
          <Auk::Label for="given-name">
            Voornaam
          </Auk::Label>
          <Auk::Input
            type="text"
            id="given-name"
            @block={{true}}
            value={{@source.givenName}}
            {{on "input" (fn this.setInputValue @source "givenName")}}
            {{on "change" this.setFullName}}
          />
        </div>
        <div class="auk-o-grid-col-6 auk-form-group">
          <Auk::Label for="family-name">
            Achternaam
          </Auk::Label>
          <Auk::Input
            type="text"
            id="family-name"
            @block={{true}}
            value={{@source.familyName}}
            {{on "input" (fn this.setInputValue @source "familyName")}}
            {{on "change" this.setFullName}}
          />
        </div>
        <div class="auk-o-grid-col-12 auk-form-group">
          <Auk::Label for="contact-role">
            Functie
          </Auk::Label>
          <Auk::Input
            type="text"
            id="contact-role"
            @block={{true}}
            {{on "input" (fn this.setInputValue @source "role")}}
            value={{@source.role}}
          />
        </div>
        <div class="auk-o-grid-col-12">
          <InputField::OrganizationSelect
            @label="Entiteit"
            @selected={{@source.organization}}
            @onChange={{this.selectOrganization}}
          />
        </div>
      </div>
    </div>

    <div class="auk-u-mt-8">
      <h2 class="auk-h2">Contact informatie</h2>
      <div class="auk-o-grid auk-form-group-layout auk-form-group-layout--grid">
        <div class="auk-o-grid-col-6 auk-form-group">
          <Auk::Label for="telephone">
            Telefoonnummer
          </Auk::Label>
          <Auk::Input
            type="text"
            id="telephone"
            @block={{true}}
            value={{this.telephone.value}}
            {{on "input" (fn this.setInputValue this.telephone "value")}}
          />
        </div>
        <div class="auk-o-grid-col-6 auk-form-group">
          <Auk::Label for="mobile-phone">
            Mobiel nummer
          </Auk::Label>
          <Auk::Input
            type="text"
            id="mobile-phone"
            @block={{true}}
            value={{this.mobilePhone.value}}
            {{on "input" (fn this.setInputValue this.mobilePhone "value")}}
          />
        </div>
        <div class="auk-o-grid-col-12 auk-form-group">
          <Auk::Label for="email">
            E-mailadres
          </Auk::Label>
          <Auk::Input
            type="text"
            id="email"
            @block={{true}}
            value={{this.mailAddress.value}}
            {{on "input" (fn this.setInputValue this.mailAddress "value")}}
          />
        </div>
      </div>
    </div>

    <div class="auk-u-mt-8">
      <h2 class="auk-h2">Toon contact informatie</h2>
      <div class="auk-o-grid auk-form-group-layout auk-form-group-layout--grid">
        <InputField::SourceInfoPublicationChannels
          @telephone={{this.telephone}}
          @mobilePhone={{this.mobilePhone}}
          @mailAddress={{this.mailAddress}}
        />
      </div>
    </div>
  </div>
{{/unless}}