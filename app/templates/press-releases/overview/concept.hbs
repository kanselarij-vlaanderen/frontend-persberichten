{{page-title "Concepten"}}

<div class="auk-u-m-8">
  <WebComponents::AuToolbar @size="large">
    <WebComponents::AuToolbar::Group @position="left">
      <WebComponents::AuToolbar::Item>
        <h1 class="auk-h1">Concepten</h1>
      </WebComponents::AuToolbar::Item>
    </WebComponents::AuToolbar::Group>
  </WebComponents::AuToolbar>

  <PressRelease::Table
    @model={{this.model}}
    @sort={{this.sort}}
    @page={{this.page}}
    @size={{this.size}}
    @onSortChange={{this.setSort}}
    @onNextPage={{this.nextPage}}
    @onPreviousPage={{this.prevPage}}
    @onPageSizeChange={{this.setPageSize}}
    @noDataMessage="Geen concepten gevonden"
  />
</div>

{{outlet}}