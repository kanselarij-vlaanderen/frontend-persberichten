<Auk::Navbar @skin="gray-100" @size="large">
  <Auk::Toolbar>
    <Auk::Toolbar::Group  @position="left">
      <Auk::Toolbar::Item>
        <Auk::Button
          @layout="icon-only"
          @skin="borderless"
          @icon="chevron-left"
          @size="large"
          {{on "click" (perform this.navigateBack)}}
        />
      </Auk::Toolbar::Item>
      <Auk::Toolbar::Item>
        <div class="auk-overline auk-u-block auk-u-muted">
          Persberichten
        </div>
        <h2 class="auk-toolbar__title">
          {{this.pressRelease.title}}
          {{#if this.pressRelease.publicationEvent}}
            {{#if this.pressRelease.publicationEvent.started}}
              <Auk::Pill class="auk-u-ml">
                Gepubliceerd op {{dayjs-format this.pressRelease.publicationEvent.started outputFormat="DD-MM-YYYY [om] HH:mm"}}
              </Auk::Pill>
            {{else}}
              <Auk::Pill class="auk-u-ml">
                Wordt gepubliceerd op {{dayjs-format this.pressRelease.publicationEvent.plannedStartDate outputFormat="DD-MM-YYYY [om] HH:mm"}}
              </Auk::Pill>
            {{/if}}
          {{/if}}
        </h2>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group >
    <Auk::Toolbar::Group  @position="right">
      <Auk::Toolbar::Item>
        {{#if this.savePressRelease.last.isError}}
          <Auk::StatusPill @status="error">
            Opslaan mislukt
          </Auk::StatusPill>
        {{else}}
        <Auk::StatusPill @status="done">
          {{dayjs-from-now this.pressRelease.modified}} opgeslagen
        </Auk::StatusPill>
        {{/if}}
      </Auk::Toolbar::Item>
      <Auk::Toolbar::Item>
        <Auk::Button
          @icon="chevron-down"
          @layout="icon-right">
          Acties
        </Auk::Button>
        <AttachPopover
            @class="ember-attacher-popper"
            @hideOn="clickout click"
            @showOn="click"
            @animation="shift"
            @placement="bottom">
          <Auk::Dropdown>
            <div class="auk-menu__item" role="button" {{on "click" this.saveChanges}}>
              Opslaan
            </div>
            <div class="auk-menu__item" role="button" {{on "click" this.saveChangesAndNavigateBack}}>
              Opslaan en sluiten
            </div>
            {{#if this.pressRelease.publicationEvent.plannedStartDate}}
              {{!-- expand if with or when more danger colored buttens are added --}}
              <div class="auk-menu__divider"></div>
            {{/if}}
            {{#if this.pressRelease.publicationEvent.plannedStartDate}}
              <div class="auk-menu__item auk-menu__item--danger" role="button" {{on "click" (perform this.revokePressRelease)}}>
                Intrekken
              </div>
            {{/if}}
          </Auk::Dropdown>
        </AttachPopover>
      </Auk::Toolbar::Item>
      <Auk::Toolbar::Item>
        <Auk::Button
          @skin="primary"
          @icon="chevron-down"
          @layout="icon-right">
          Publiceren
        </Auk::Button>
        <AttachPopover
            @class="ember-attacher-popper"
            @hideOn="clickout click"
            @showOn="click"
            @animation="shift"
            @placement="bottom">
          <Auk::Dropdown>
            <div class="auk-menu__item" role="button" {{on "click" this.openPublicationModal}}>
              Nu publiceren
            </div>
            <div class="auk-menu__item" role="button" {{on "click" this.openPublicationPlanningModal}}>
              {{#if this.model.publicationEvent.isPlanned}}
                Planning bewerken
              {{else}}
                Later publiceren
              {{/if}}
            </div>
          </Auk::Dropdown>
        </AttachPopover>
      </Auk::Toolbar::Item>
    </Auk::Toolbar::Group >
  </Auk::Toolbar>
</Auk::Navbar>

<PressRelease::Form @pressRelease={{this.pressRelease}} />

{{#if this.showPublicationModal}}
  <PressRelease::PublicationModal
    @onCancel={{this.closePublicationModal}}
    @onPublish={{perform this.publish}}
    @loading={{this.publish.isRunning}}
  />
{{/if}}

{{#if this.showPublicationPlanningModal}}
  <PressRelease::PublicationPlanningModal
    @plannedDate={{this.model.publicationEvent.plannedStartDate}}
    @onCancel={{this.closePublicationPlanningModal}}
    @onPublish={{perform this.publish}}
    @loading={{this.publish.isRunning}}
  />
{{/if}}

{{#if this.showConfirmationModal}}
  <DiscardChangesModal
    @loading={{this.confirmNavigationBack.isRunning}}
    @onCancel={{this.cancelNavigationBack}}
    @onConfirm={{perform this.confirmNavigationBack}}
  />
{{/if}}

{{outlet}}