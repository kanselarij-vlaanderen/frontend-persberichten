{{page-title "Vlivia"}}

{{#if this.currentSession.isValidUser}}
  <MainHeader />
{{/if}}
{{outlet}}
{{#if this.toaster.toasts.length}}
  <Auk::AlertStack as |Alert|>
    {{#each this.toaster.toasts as |toast|}}
      <Alert
        @skin={{toast.options.type}}
        @title={{toast.title}}
        @message={{toast.message}}
        @isClosable={{not (eq toast.options.type "success")}}
        @onClose={{fn this.toaster.clear toast}}
      />
    {{/each}}
  </Auk::AlertStack>
{{/if}}
