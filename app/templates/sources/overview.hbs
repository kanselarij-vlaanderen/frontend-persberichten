{{page-title "Overzicht"}}

<Auk::Navbar @skin="gray-100" @auto={{true}}>
  <Auk::Toolbar as |Toolbar|>
    <Toolbar.Group @position="left" as |Group|>
      <Group.Item>
        <div class="o-flex o-flex--vertical auk-u-mt-2">
          <div class="o-flex o-flex--vertical-center">
            <h4 class="auk-toolbar-complex__title">Perscontacten</h4>
          </div>
          <Auk::Tabs @reversed="true" as |Tabs|>
            <Tabs.Tab
              @route="sources.overview.active">
              Actief
            </Tabs.Tab>
            <Tabs.Tab
              @route="sources.overview.inactive">
              Niet actief
            </Tabs.Tab>
          </Auk::Tabs>
        </div>
      </Group.Item>
    </Toolbar.Group>
    <Toolbar.Group @position="right" as |Group|>
      <Group.Item>
        <Auk::Button @icon="add" @skin="primary" @route="sources.new">
          Perscontact aanmaken
        </Auk::Button>
      </Group.Item>
    </Toolbar.Group>
  </Auk::Toolbar>
</Auk::Navbar>

{{outlet}}